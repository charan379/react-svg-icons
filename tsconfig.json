{
  "compilerOptions": {
    "target": "ES2018",                // or ESNext if you prefer
    "module": "CommonJS",             // For Node.js compatible output
    "declaration": true,              // Generate .d.ts files
    "declarationDir": "dist/types",  // Output folder for type declarations
    "outDir": "dist/cjs",             // Output folder for compiled JS
    "strict": true,                   // All strict type-checking options
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",               // if you use React 17+
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}